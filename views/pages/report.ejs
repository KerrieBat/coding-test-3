<head>
    <% include ../partials/head %>
</head>
<body class="newhol">
  <div class="container">
    <header>
        <% include ../partials/header %>
    </header>

    <main>
      <div class="jumbotron color2 color6">
          <h1>Thank You!</h1>
      </div>

<!-- trip details input field -->
      <div class="form-background suggestion">
        <form class="form-horizontal" action="/" method="post" role="form" style="width: 90%;">
          <div>
            <h2>Would you like us to get back to you? </h2>
          </div>
          <div>
            <h2>We value your feedback and welcome any suggestions for Coastcare programmes</h2>
          </div>
          <div class="form-group">
             <label for="message" class="col-sm-2 control-label">Suggestions</label>
             <div class="col-sm-10">
                 <textarea class="form-control" rows="4" name="message"></textarea>
             </div>
         </div>

         <div class="form-group">
             <div class="col-sm-10 col-sm-offset-2">
                 <input id="submit" name="submit" type="suggestion" value="Submit" class="btn btn-primary">
             </div>
         </div>

        </form>

      </div>
    </main>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </div>
</body>
</html>
